  <div class="emoji">üôÉ</div>
  <div class="emoji">üòÑ</div>

  <!-- Joke Generator -->
  <div class="joke-box">
    <h1>üòÇ Joke Generator</h1>
    <div class="joke-text" id="joke">Click the button to get a joke!</div>
    <div>
      <button onclick="getJoke()">Get Joke</button>
      <button onclick="copyJoke()">Copy</button>
      <button onclick="toggleDarkMode()">Toggle Dark Mode</button>
    </div>
  </div>

  <script>
    const jokeDiv = document.getElementById('joke');
    const body = document.body;

    async function getJoke() {
      jokeDiv.classList.remove('visible');
      jokeDiv.textContent = "Loading...";

      try {
        const res = await fetch("https://official-joke-api.appspot.com/jokes/random");
        const data = await res.json();
        const joke = `${data.setup} üòÑ ${data.punchline}`;

        setTimeout(() => {
          jokeDiv.textContent = joke;
          jokeDiv.classList.add('visible');
          saveJokeToHistory(joke);
        }, 400);
      } catch (err) {
        jokeDiv.textContent = "Oops! Couldn't fetch a joke.";
        console.error(err);
      }
    }

    function copyJoke() {
      navigator.clipboard.writeText(jokeDiv.textContent).then(() => {
        alert("Joke copied to clipboard!");
      });
    }

    function toggleDarkMode() {
      body.classList.toggle('dark');
    }

    function saveJokeToHistory(joke) {
      let jokes = JSON.parse(localStorage.getItem("jokeHistory")) || [];
      jokes.push(joke);
      if (jokes.length > 10) jokes.shift();
      localStorage.setItem("jokeHistory", JSON.stringify(jokes));
    }
  </script>
